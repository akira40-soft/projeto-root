# Limpa cache e instala dependรชncias
RUN npm cache clean --force && \
    npm config set fetch-retry-mintimeout 100000 && \
    npm config set fetch-retry-maxtimeout 600000

# Instala Baileys PRIMEIRO (instalaรงรฃo isolada)
RUN echo "๐ฆ Instalando Baileys isoladamente..." && \
    npm install @whiskeysockets/baileys@6.7.5 --legacy-peer-deps --no-save

# Agora instala TODAS as dependรชncias
RUN npm install --legacy-peer-deps --no-audit

# Rebuild de mรณdulos nativos
RUN npm rebuild ffmpeg-static --build-from-source || true && \
    npm rebuild sharp --build-from-source || true

# โโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโโ
